spawn_num = {+kingpin_gained} 0, {-kingpin_gained +jup_b207_task_end} 0, {-kingpin_gained +jup_a12_task_done} 0, {-kingpin_gained +jup_b46_task_done} 0, {-kingpin_gained +jup_b8_heli_4_searched} 0, {-kingpin_gained +jup_b209_task_done} 0, {-kingpin_gained +jup_b218_gather_squad_complete} 0, 1

