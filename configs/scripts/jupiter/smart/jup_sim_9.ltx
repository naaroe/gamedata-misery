[smart_terrain]
squad_id = 47
max_population = 1
respawn_only_smart = true
respawn_params = respawn@jup_sim_9

[respawn@jup_sim_9]
spawn_stalker@hunter_day
spawn_stalker@hunter_night

spawn_stalker@hunter_day_hostile
spawn_stalker@hunter_night_hostile

spawn_stalker@advanced_hostile
